<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_nav_background"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_line_75"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/posting_as"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/fightPandemicsNero"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:text="Posting As" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/active">

            <com.fightpandemics.createpost.custom.ProfileImageView
                android:id="@+id/user_avatar"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                app:aiv_borderColor="?colorPrimary"
                app:aiv_borderWidth="2dp"
                app:aiv_initials="VM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/user_full_name"
                style="@style/AndroidNativeH314Px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victor Maragioglio"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
                app:layout_constraintStart_toEndOf="@+id/user_avatar"
                app:layout_constraintTop_toTopOf="@+id/user_avatar"
                tools:text="Victor Maragioglio" />

            <RadioButton
                android:id="@+id/user_radio_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/user_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#4CD7D7D7"
        app:layout_constraintTop_toBottomOf="@+id/user_card" />

        <TextView
            android:id="@+id/textView3"
            style="@style/AndroidNativeH412Px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/my_organisation"
            app:layout_constraintStart_toStartOf="@+id/user_card"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_my_organization_list"
        tools:itemCount="2"
        app:layout_constraintTop_toBottomOf="@id/textView3"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_view"
        app:layout_constraintTop_toBottomOf="@+id/rv_organization" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        style="@style/AndroidNativeH314Px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        android:gravity="center"
        android:backgroundTint="@color/colorWhite"
        android:drawableStart="@drawable/ic_plus_sign"
        android:text="@string/add_an_organisation_account"
        android:textAllCaps="false"
        android:textColor="@color/fightPandemicsNeonBlue"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />


</androidx.constraintlayout.widget.ConstraintLayout>