<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:background="@drawable/bottom_nav_background"
    android:layout_height="wrap_content"
    android:layout_gravity="top">

    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_line_75"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="@string/who_can_see_this_post"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/neighbourhood"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/worksans_regular"
        android:lineSpacingExtra="7sp"
        android:text="@string/my_city"
        android:textAllCaps="false"
        android:background="@color/fightPandemicsWhiteSmoke"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/see"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/city"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/worksans_regular"
        android:lineSpacingExtra="7sp"
        android:textAllCaps="false"
        android:text="@string/my_state"
        android:background="@color/fightPandemicsWhiteSmoke"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neighbourhood"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/country"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/worksans_regular"
        android:lineSpacingExtra="7sp"
        android:textAllCaps="false"
        android:text="@string/my_country"
        android:background="@color/fightPandemicsWhiteSmoke"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anyone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/worksans_regular"
        android:lineSpacingExtra="7sp"
        android:textAllCaps="false"
        android:text="@string/worldwide"
        android:background="@color/fightPandemicsWhiteSmoke"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country"/>

</androidx.constraintlayout.widget.ConstraintLayout>