<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AndroidNativeP212Px">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
    </style>

    <style name="AndroidNativeH216Px">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
    </style>

    <style name="AndroidNativeP114Px">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
    </style>

    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_selected_effect</item>
        <item name="android:textColor">@drawable/chip_text_color_selected_effect</item>
        <item name="chipEndPadding">20dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/font_family_worksans</item>
        <item name="chipSpacingVertical">4sp</item>
        <item name="android:layout_marginBottom">4sp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@color/button_primary_background_selector</item>
        <item name="android:textColor">@color/button_primary_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="paddingStart">28dp</item>
        <item name="textAllCaps">false</item>
        <item name="paddingEnd">28dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/colorWhite</item>
        <item name="strokeColor">@color/fightPandemicsNeonBlue</item>
        <item name="android:textColor">@color/fightPandemicsNeonBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="paddingStart">28dp</item>
        <item name="textAllCaps">false</item>
        <item name="paddingEnd">28dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AndroidNativeH314Px">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
    </style>
</resources>