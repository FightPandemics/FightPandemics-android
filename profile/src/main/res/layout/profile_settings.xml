<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurface"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/textView2"
                style="@style/AndroidNativeH122Px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_action"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.google.android.material.appbar.MaterialToolbar>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstBlockSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/updatePublicProfileContainer"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/worksans_regular"
                    android:lineHeight="18sp"
                    android:text="@string/update_public_profile"
                    android:textColor="@color/fightPandemicsNeonBlue"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:rotation="270"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/updateAccountInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/updatePublicProfileContainer" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/worksans_regular"
                    android:lineHeight="20sp"
                    android:text="@string/update_account_information"
                    android:textColor="@color/fightPandemicsNeonBlue"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:rotation="270"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/setupNotificationSettingsContainer"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/updateAccountInfoContainer" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/worksans_regular"
                    android:lineHeight="20sp"
                    android:text="@string/setup_notification_settings"
                    android:textColor="@color/fightPandemicsNeonBlue"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:rotation="270"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/myAccountContainer"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/myAccountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/worksans_regular"
                    android:lineHeight="18sp"
                    android:text="@string/my_account"
                    android:textColor="@color/fightPandemicsNeonBlue"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/AndroidNativeP311Px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/join_now"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/myAccountText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:rotation="270"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/aboutUsContainer"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/firstBlockSettings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/worksans_regular"
            android:lineHeight="18sp"
            android:text="@string/about_us"
            android:textColor="@color/fightPandemicsNeonBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/aboutUsContainer"
            app:layout_constraintLeft_toLeftOf="@id/aboutUsContainer"
            app:layout_constraintTop_toTopOf="@id/aboutUsContainer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_external_link"
            app:layout_constraintBottom_toBottomOf="@id/aboutUsContainer"
            app:layout_constraintRight_toRightOf="@+id/aboutUsContainer"
            app:layout_constraintTop_toTopOf="@id/aboutUsContainer" />

        <View
            android:id="@+id/privacyPolicyContainer"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutUsContainer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/worksans_regular"
            android:lineHeight="18sp"
            android:text="@string/privacy_policy"
            android:textColor="@color/fightPandemicsNeonBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/privacyPolicyContainer"
            app:layout_constraintLeft_toLeftOf="@id/privacyPolicyContainer"
            app:layout_constraintTop_toTopOf="@id/privacyPolicyContainer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_external_link"
            app:layout_constraintBottom_toBottomOf="@id/privacyPolicyContainer"
            app:layout_constraintRight_toRightOf="@+id/privacyPolicyContainer"
            app:layout_constraintTop_toTopOf="@id/privacyPolicyContainer" />

        <View
            android:id="@+id/supportContainer"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/privacyPolicyContainer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/worksans_regular"
            android:lineHeight="18sp"
            android:text="@string/support"
            android:textColor="@color/fightPandemicsNeonBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/supportContainer"
            app:layout_constraintLeft_toLeftOf="@id/supportContainer"
            app:layout_constraintTop_toTopOf="@id/supportContainer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_external_link"
            app:layout_constraintBottom_toBottomOf="@id/supportContainer"
            app:layout_constraintRight_toRightOf="@+id/supportContainer"
            app:layout_constraintTop_toTopOf="@id/supportContainer" />

        <View
            android:id="@+id/feedbackContainer"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/supportContainer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/worksans_regular"
            android:lineHeight="18sp"
            android:text="@string/feedback"
            android:textColor="@color/fightPandemicsNeonBlue"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/feedbackContainer"
            app:layout_constraintLeft_toLeftOf="@id/feedbackContainer"
            app:layout_constraintTop_toTopOf="@id/feedbackContainer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:rotation="270"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/feedbackContainer"
            app:layout_constraintRight_toRightOf="@id/feedbackContainer"
            app:layout_constraintTop_toTopOf="@id/feedbackContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signoutContainer"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feedbackContainer" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/worksans_regular"
                android:lineHeight="18sp"
                android:text="@string/signout"
                android:textColor="@color/fightPandemicsNeonBlue"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:rotation="270"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/appVersion"
            style="@style/AndroidNativeP311Px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/fightpandemics_app_v"
            app:layout_constraintTop_toBottomOf="@id/signoutContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>