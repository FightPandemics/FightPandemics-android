<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Password Recovery-->
    <style name="textInputLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:background">@color/color_background</item>
        <item name="colorError">@color/colorRed</item>
        <item name="android:lineSpacingExtra">7.3sp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:paddingStart">-12dp</item>
        <item name="android:gravity">bottom|start</item>
    </style>

    <!-- Feedback Styles -->
    <style name="VerticalRadioButton" parent="AndroidNativeP114Px">
        <item name="android:buttonTint">@color/fightPandemicsNeonBlue</item>
    </style>

    <style name="RatingRadioButton" parent="AndroidNativeP114Px">
        <item name="android:buttonTint">@color/fightPandemicsNeonBlue</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="RatingRadioButtonColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/fightPandemicsNeonBlue</item>
        <item name="colorControlActivated">@color/fightPandemicsNeonBlue</item>
    </style>

    <style name="RadioWithTextOnTop">
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <!-- Profile -->
    <style name="ProgressBarTheme">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/fightPandemicsGhostWhite</item>
        <item name="chipCornerRadius">4dp</item>
    </style>

</resources>