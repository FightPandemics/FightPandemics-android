<?xml version="1.0" encoding="utf-8"?>

<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- The background color, preferably the same as the normal theme -->
    <item android:drawable="@color/fightPandemicsSplashScreenBg" />

    <!--Product logo - 144dp color version of the app icon -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/logo" />
    </item>

</layer-list>