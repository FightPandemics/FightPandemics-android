<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBarTheme">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/fightPandemicsGhostWhite</item>
        <item name="chipCornerRadius">4dp</item>
    </style>

    <style name="HomeFilterChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:enabled">false</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="chipBackgroundColor">@color/fightPandemicsGhostWhite</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/fightPandemicsNeonBlue</item>
        <item name="closeIcon">@drawable/ic_cancel</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@null</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconEndPadding">4dp</item>
        <item name="closeIconSize">20dp</item>
        <item name="fontFamily">@font/worksans_regular</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_nav_background</item>
    </style>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="buttonEdit" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/button_edit_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/button_edit_tint</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_edit_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonDelete" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/button_delete_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/button_delete_tint</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_delete_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PostMaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AndroidNativeH216Px</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AndroidNativeP114Px</item>
    </style>

    <style name="textViewClickable" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>